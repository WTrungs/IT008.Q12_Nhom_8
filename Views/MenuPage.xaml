<Page x:Class="TetrisApp.Views.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TetrisApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="320">
            <TextBlock Name="MenuTextBlock" Text="Menu" FontSize="40" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Button Name="StartButton" Style="{StaticResource NiceButton}" Content="Start" Height="45" Click="NewGameButton_Click"/>
            <Button Name="DifficultyButton" Style="{StaticResource NiceButton}" Content="Difficulty" Height="45" Margin="0,10,0,0"/>
            <Button Name="SettingsButton" Style="{StaticResource NiceButton}" Content="Settings" Height="45" Margin="0,10,0,0" Click="SettingsButton_Click"/>
            <Button x:Name="BackToLoginButton" Style="{StaticResource NiceButton}" Content="Back to Login" Height="45" Margin="0,10,0,0" Click="BackToLoginButton_Click"/>
            <Button Name="ExitButton" Style="{StaticResource NiceButton}" Content="Exit" Height="45" Margin="0,10,0,0" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
