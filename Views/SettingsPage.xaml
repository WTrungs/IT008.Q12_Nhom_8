<Page x:Class="TetrisApp.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TetrisApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid Background="{StaticResource SpaceBackground}">

        <Grid Background="{StaticResource StarsBrush}"
              Opacity="0.3"/>
        <Ellipse Width="600"
         Height="400"
         HorizontalAlignment="Center"
         VerticalAlignment="Center"
         IsHitTestVisible="False">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#553A7BFF" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

        <!-- Phan chua settings -->
        <Border Style="{StaticResource GlassCard}"
                Width="480"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Grid Margin="30">
                <StackPanel Width="400" VerticalAlignment="Center">

                    <!-- Title -->
                    <TextBlock Text="SETTINGS"
                               FontSize="30"
                               FontWeight="SemiBold"
                               Foreground="#E6ECFF"
                               Margin="0,0,0,26"
                               HorizontalAlignment="Center"/>

                    <!-- mucsic checkbox -->
                    <CheckBox x:Name="MusicToggle"
                              VerticalAlignment="Center"
                              VerticalContentAlignment="Center"
                              Margin="0,0,0,16"
                              FontSize="18"
                              Height="36">
                        <TextBlock Text="Music" Foreground="#E6ECFF" FontSize="18"/>
                    </CheckBox>

                    <!-- Volume -->
                    <TextBlock Text="VOLUME"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Opacity="0.75"
                               Margin="0,0,0,4"
                               Foreground="#E6ECFF"/>
                    
                    <Slider x:Name="VolumeSlider"
                            Minimum="0"
                            Maximum="1"
                            TickFrequency="0.01"
                            IsSnapToTickEnabled="True"
                            Margin="0,0,22,18"/>
                    
                    <!-- SELECT TRACK -->
                    <TextBlock Text="SELECT TRACK"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Opacity="0.75"
                               Margin="0,0,0,4"
                               Foreground="#E6ECFF"/>

                    <ComboBox x:Name="TrackCombo"
                              Height="36"
                              Padding="10,4"
                              Margin="0,6,22,20"
                              FontSize="14"
                              Foreground="White"
                              Background="#252A3A"
                              BorderBrush="#3A3F4B"
                              IsEditable="False">
                        <ComboBoxItem Content="Track 1"/>
                        <ComboBoxItem Content="Track 2"/>
                        <ComboBoxItem Content="Track 3"/>
                    </ComboBox>

                    <!-- Button -->
                    <Grid Margin="0,12,22,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <!-- Cancel -->
                        <Button Grid.Column="0"
                                Style="{StaticResource SpaceButton}"
                                Content="CANCEL"
                                FontWeight="SemiBold"
                                Height="45"
                                Margin="0,0,8,0"
                                Click="Cancel_Click"/>
                        <!-- Accept -->
                        <Button Grid.Column="1"
                        Style="{StaticResource SpaceButton}"
                        Content="ACCEPT"
                        FontWeight="SemiBold"
                        Height="45"
                        Margin="8,0,1,0"
                        Click="Accept_Click"/>
                    </Grid>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
