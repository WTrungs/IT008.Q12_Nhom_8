<Page x:Class="TetrisApp.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TetrisApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000"
      Title="SettingPage"
      Background="{StaticResource SpaceBackground}"
      UseLayoutRounding="True"
      SnapsToDevicePixels="True">

    <Page.Resources>

        <!--CheckBox style-->
        <Style x:Key="SpaceToggle" TargetType="CheckBox">
            <!-- Nhỏ hơn -->
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>

                            <!-- Track -->
                            <Border x:Name="Track"
                            Background="#2A2F3F"
                            CornerRadius="11"/>

                            <!-- Thumb -->
                            <Ellipse x:Name="Thumb"
                             Width="16"
                             Height="16"
                             Fill="#EAF0FF"
                             Margin="3"
                             HorizontalAlignment="Left"/>
                        </Grid>

                        <ControlTemplate.Triggers>

                            <!-- Checked -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track"
                                Property="Background"
                                Value="#22D3EE"/>
                                <Setter TargetName="Thumb"
                                Property="HorizontalAlignment"
                                Value="Right"/>
                                <Setter TargetName="Track" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#22D3EE"
                                                  BlurRadius="14"
                                                  ShadowDepth="0"
                                                  Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Track"
                                Property="Background"
                                Value="#3A4058"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--Slider style-->
        <Style x:Key="SpaceSlider" TargetType="Slider">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="1"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid Height="28">
                            <Track x:Name="PART_Track"
                                   VerticalAlignment="Center"
                                   IsDirectionReversed="False">

                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.DecreaseLarge}">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Height="4" Background="#22D3EE" CornerRadius="2"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>

                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.IncreaseLarge}">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Height="4" Background="#2A2F3F" CornerRadius="2"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>

                                <Track.Thumb>
                                    <Thumb Width="14" Height="14">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Fill="#EAF0FF"
                                                         Stroke="#22D3EE"
                                                         StrokeThickness="2"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--ComboBox ToggleButton style-->
        <Style x:Key="SpaceComboBoxToggle" TargetType="ToggleButton">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="ClickMode" Value="Press"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="templateRoot"
                                Background="#1A1F2E"
                                BorderThickness="1"
                                BorderBrush="#3A4058"
                                CornerRadius="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>
                                <Path x:Name="arrow"
                                      Grid.Column="1"
                                      Fill="#EAF0FF"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Data="M 0 0 L 4 4 L 8 0 Z"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="templateRoot" Property="BorderBrush" Value="#22D3EE"/>
                                <Setter TargetName="templateRoot" Property="Background" Value="#252A40"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter TargetName="templateRoot" Property="BorderBrush" Value="#22D3EE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--ComboBoxItem style-->
        <Style TargetType="ComboBoxItem" x:Key="SpaceComboBoxItem">
            <Setter Property="Foreground" Value="#EAF0FF"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd"
                                Background="Transparent"
                                BorderThickness="0"
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3A4058"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>

                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#22D3EE"/>
                                <Setter Property="Foreground" Value="#05060F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!--ComboBox style-->
        <Style x:Key="SpaceComboBox" TargetType="ComboBox">
            <Setter Property="Foreground" Value="#EAF0FF"/>
            <Setter Property="Background" Value="#1A1F2E"/>
            <Setter Property="BorderBrush" Value="#3A4058"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="ItemContainerStyle" Value="{StaticResource SpaceComboBoxItem}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton"
                                          Style="{StaticResource SpaceComboBoxToggle}"
                                          Focusable="false"
                                          ClickMode="Press"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>

                            <ContentPresenter Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="15,0,30,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>

                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="#1A1F2E"
                                            BorderThickness="1"
                                            BorderBrush="#3A4058"
                                            CornerRadius="20"
                                            Margin="0,4,0,0">
                                        <ScrollViewer Margin="0,4" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsGrouping" Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="true">
                                <Setter TargetName="DropDownBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#22D3EE" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Rectangle Fill="{StaticResource SpaceBackground}"/>

        <!-- Grid makeup -->
        <Canvas IsHitTestVisible="True" Opacity="0.9">
            <Ellipse Width="700" Height="700" Canvas.Left="-219" Canvas.Top="-340" Fill="#557C3AED">
                <Ellipse.Effect>
                    <BlurEffect Radius="100"/>
                </Ellipse.Effect>
            </Ellipse>

            <Ellipse Width="700" Height="700" Canvas.Left="190" Canvas.Top="325" Fill="#BA748D" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Ellipse.Effect>
                    <BlurEffect Radius="100"/>
                </Ellipse.Effect>
            </Ellipse>

            <Ellipse Width="700" Height="694" Canvas.Left="650" Canvas.Top="-267" Fill="#4E7198">
                <Ellipse.Effect>
                    <BlurEffect Radius="100"/>
                </Ellipse.Effect>
            </Ellipse>

            <Ellipse Width="700" Height="700" Canvas.Right="-160" Canvas.Top="325" Fill="#5522D3EE" Canvas.Left="890" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Ellipse.Effect>
                    <BlurEffect Radius="100"/>
                </Ellipse.Effect>
            </Ellipse>

            <Ellipse Width="700" Height="700" Canvas.Left="-536" Canvas.Bottom="-220" Fill="#44FB7185" HorizontalAlignment="Left" Canvas.Top="356" VerticalAlignment="Top">
                <Ellipse.Effect>
                    <BlurEffect Radius="100"/>
                </Ellipse.Effect>
            </Ellipse>
        </Canvas>

        <!-- Stars -->
        <Rectangle Fill="{StaticResource StarsBrush}" Opacity="0.35" IsHitTestVisible="False"/>

        <!-- Phan chua settings -->
        <Border Style="{StaticResource GlassCard}"
                Width="480"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Grid Margin="30,0,30,0" Height="437">
                <StackPanel VerticalAlignment="Center" Height="437" Margin="-1,0,-22,0">

                    <!-- Title -->
                    <TextBlock Text="SETTINGS"
                               Margin="0,0,0,26"
                               FontSize="30"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>

                    <!-- mucsic checkbox -->
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,0,20">

                        <TextBlock Text="MUSIC"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Opacity="0.75"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>

                        <CheckBox x:Name="MusicToggle"
                                  Style="{StaticResource SpaceToggle}"
                                  IsChecked="True"/>
                    </StackPanel>

                    <!-- Volume -->
                    <TextBlock Text="VOLUME"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Opacity="0.75"
                               Margin="0,0,0,4"
                               Foreground="#E6ECFF"/>

                    <Slider x:Name="MusicVolumeSlider"
                            Style="{StaticResource SpaceSlider}"
                            Margin="0,0,22,14"/>

                    <!-- SFX Volume -->
                    <TextBlock Text="SFX VOLUME"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Opacity="0.75"
                               Margin="0,0,0,4"
                               Foreground="#E6ECFF"/>

                    <Slider x:Name="SfxVolumeSlider"
                            Style="{StaticResource SpaceSlider}"
                            Margin="0,0,22,18"/>

                    <!-- SELECT TRACK -->
                    <TextBlock Text="SELECT TRACK"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Opacity="0.75"
                               Margin="0,0,0,4"
                               Foreground="#E6ECFF"/>

                    <ComboBox x:Name="TrackCombo" Style="{StaticResource SpaceComboBox}" Margin="0,0,22,0">
                        <ComboBoxItem Content="14-Puzzle"/>
                        <ComboBoxItem Content="47-Fleatopia"/>
                        <ComboBoxItem Content="202-Driftveil City"/>
                    </ComboBox>

                    <!-- Button -->
                    <Grid Margin="0,12,22,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <!-- Cancel -->
                        <Button Grid.Column="0"
                                Style="{StaticResource SpaceButton}"
                                Content="CANCEL"
                                FontWeight="SemiBold"
                                Height="45"
                                Margin="0,0,8,0"
                                Click="Cancel_Click"/>
                        <!-- Accept -->
                        <Button Grid.Column="1"
                        Style="{StaticResource SpaceButton}"
                        Content="ACCEPT"
                        FontWeight="SemiBold"
                        Height="45"
                        Margin="8,0,1,0"
                        Click="Accept_Click"/>
                    </Grid>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
