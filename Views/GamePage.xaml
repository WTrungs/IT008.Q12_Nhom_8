<Page x:Class="TetrisApp.Views.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TetrisApp.Views"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="GamePage" Height="641">

    <Page.Resources>
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Grid Tile Brush -->
        <DrawingBrush x:Key="GridTileBrush"
                      TileMode="Tile"
                      Viewport="0,0,26,26" ViewportUnits="Absolute"
                      Viewbox="0,0,26,26" ViewboxUnits="Absolute">
            <DrawingBrush.Drawing>
                <GeometryDrawing Brush="#0F0F12">
                    <GeometryDrawing.Pen>
                        <Pen Brush="#2A2A33" Thickness="1"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,26,26"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </Page.Resources>

    <Grid Margin="22">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="340"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT: Gameplay -->
        <Border Padding="16" CornerRadius="18" Background="#15151A" BorderBrush="#2A2A33" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top Bar -->
                <DockPanel Margin="0,0,0,12">
                    <TextBlock Text="Game play"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"
                               DockPanel.Dock="Left"/>
                </DockPanel>

                <!-- Board -->
                <Border Grid.Row="1"
                        CornerRadius="12"
                        BorderBrush="#2A2A33"
                        BorderThickness="1"
                        Background="{StaticResource GridTileBrush}">
                    <!-- Viewbox -->
                    <Viewbox Stretch="Uniform">
                        <!-- Scale 10x20 -->
                        <Grid Width="260" Height="520">
                            <TextBlock Text="BOARD 10x20"
                                       Foreground="#8E8EA0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Viewbox>
                </Border>
            </Grid>
        </Border>

        <!-- RIGHT: Info Panel -->
        <Border Grid.Column="1"
                Margin="16,0,0,0"
                Padding="16"
                CornerRadius="18"
                Background="#15151A"
                BorderBrush="#2A2A33"
                BorderThickness="1">
            <StackPanel>

                <!-- Score / Level / Lines -->
                <Grid Margin="0,0,0,14">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Padding="12" CornerRadius="12" Background="#101015" BorderBrush="#2A2A33" BorderThickness="1" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="SCORE" Foreground="#B9B9C6"/>
                            <TextBlock Text="0" Foreground="White" FontSize="26" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Padding="12" CornerRadius="12" Background="#101015" BorderBrush="#2A2A33" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="LEVEL" Foreground="#B9B9C6"/>
                            <TextBlock Text="1" Foreground="White" FontSize="26" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Border Padding="12" CornerRadius="12" Background="#101015" BorderBrush="#2A2A33" BorderThickness="1" Margin="0,0,0,14">
                    <StackPanel>
                        <TextBlock Text="LINES" Foreground="#B9B9C6"/>
                        <TextBlock Text="0" Foreground="White" FontSize="26" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Hold / Next -->
                <Grid Margin="0,0,0,14">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Padding="12" CornerRadius="12" Background="#101015" BorderBrush="#2A2A33" BorderThickness="1" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="HOLD" Foreground="#B9B9C6"/>
                            <Border Height="120" Margin="0,8,0,0" CornerRadius="10" BorderBrush="#2A2A33" BorderThickness="1"
                                    Background="{StaticResource GridTileBrush}">
                                <TextBlock Text="4x4" Foreground="#8E8EA0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Padding="12" CornerRadius="12" Background="#101015" BorderBrush="#2A2A33" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="NEXT" Foreground="#B9B9C6"/>
                            <Border Height="120" Margin="0,8,0,0" CornerRadius="10" BorderBrush="#2A2A33" BorderThickness="1"
                                    Background="{StaticResource GridTileBrush}">
                                <TextBlock Text="4x4" Foreground="#8E8EA0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Controls -->
                <Border Padding="12" CornerRadius="12" Background="#101015" BorderBrush="#2A2A33" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="CONTROLS" Foreground="#B9B9C6"/>
                        <TextBlock Foreground="#E6E6F0" Margin="0,8,0,0"
                                   Text="← → : Change&#10;↑ : Rotate&#10;↓ : Hard Drop&#10;Space : Fast Drop&#10;C/Shift : Hold&#10;P : Pause"/>
                    </StackPanel>
                </Border>

                <!-- Back -->
                <Button Content="Back to Menu" Click="Back_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
