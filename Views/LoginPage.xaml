<Page x:Class="TetrisApp.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TetrisApp.Views"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Login">

    <Grid Background="{StaticResource SpaceBackground}">
        <Grid Background="{StaticResource StarsBrush}"
              Opacity="0.35" />
        <!-- Grid makeup -->
        <Ellipse Width="600"
         Height="400"
         HorizontalAlignment="Center"
         VerticalAlignment="Center"
         IsHitTestVisible="False">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#553A7BFF" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

        <!-- Login card -->
        <Border Style="{StaticResource GlassCard}"
                Width="380"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel Width="330">
                <!-- Tillte -->
                <TextBlock Text="Tetris Game"
                           FontSize="40"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20" />
                <!-- Username -->
                <TextBlock Text="Username"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Opacity="0.9" />

                <TextBox Height="36"
                         Margin="0,6,0,18" />
                <!-- Password -->
                <TextBlock Text="Password"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Opacity="0.9" />

                <PasswordBox Height="36"
                             Margin="0,6,0,18" />
                <!-- Login -->
                <Button Style="{StaticResource SpaceButton}"
                        Content="Log in"
                        Height="36"
                        Click="LoginButton_Click" />
                <!-- Continue as guest -->
                <Button Style="{StaticResource SpaceButton}"
                        Content="Continue as Guest"
                        Height="36"
                        Margin="0,10,0,0"
                        Click="ContinueAsGuestButton_Click" />

            </StackPanel>
        </Border>
    </Grid>
</Page>