<Page x:Class="TetrisApp.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TetrisApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <StackPanel Width="360" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="LoginTextBlock" Text="Tetris Game" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Name="UsernameTextBlock" Text="Username"/>
            <TextBox Name="UsernameTextBox" Height="19" Margin="0,6,0,18"/>
            
            <TextBlock Name="PasswordTextBlock" Text="Password"/>
            <PasswordBox Name="PasswordBox" Height="19" Margin="0,6,0,18"/>

            <Button Name="LoginButton" Style="{StaticResource SpaceButton}" Content="Log in" Height="36" Click="LoginButton_Click"/>

            <Button Name="ContinueAsGuestButton" Style="{StaticResource SpaceButton}" Content="Continue as Guest" Height="36" Margin="0,10,0,0" Click ="ContinueAsGuestButton_Click"/>
        </StackPanel>
    </Grid>
</Page>