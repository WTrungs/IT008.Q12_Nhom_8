<Page x:Class="TetrisApp.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TetrisApp.Views"
      mc:Ignorable="d"
      d:DesignHeight="650" d:DesignWidth="1000"
      Title="LoginPage"
      Background="{StaticResource SpaceBackground}"
      UseLayoutRounding="True"
      SnapsToDevicePixels="True"
      Loaded="LoginPage_Loaded">

    <!-- Page Resources -->
    <Page.Resources>

        <!-- TextBox Stye -->
        <Style x:Key="SpaceTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#14182A"/>
            <Setter Property="BorderBrush" Value="#2A2A33"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#EAF0FF"/>
            <Setter Property="CaretBrush" Value="#22D3EE"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#22D3EE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PasswordBox Style -->
        <Style x:Key="SpacePasswordBox" TargetType="PasswordBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#14182A"/>
            <Setter Property="BorderBrush" Value="#2A2A33"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#EAF0FF"/>
            <Setter Property="CaretBrush" Value="#22D3EE"/>
            <Setter Property="PasswordChar" Value="●"/>
            <Setter Property="Padding" Value="12,0"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="Bd"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="12">

                            <Grid VerticalAlignment="Center">
                                <ScrollViewer x:Name="PART_ContentHost"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Stretch">
                                    <ScrollViewer.RenderTransform>
                                        <TranslateTransform Y="-1.5"/>
                                    </ScrollViewer.RenderTransform>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>

                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd"
                                Property="BorderBrush"
                                Value="#22D3EE"/>
                            </Trigger>

                            <!-- Focus -->
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd"
                                Property="BorderBrush"
                                Value="#22D3EE"/>
                                <Setter TargetName="Bd"
                                Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#22D3EE"
                                                  BlurRadius="16"
                                                  ShadowDepth="0"
                                                  Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd"
                                Property="Opacity"
                                Value="0.4"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SpaceHyperlink" TargetType="Hyperlink">
            <Setter Property="Foreground" Value="#22D3EE"/>
            <Setter Property="TextDecorations" Value="{x:Null}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Focusable" Value="True"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#A7F3FF"/>
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="Foreground" Value="#A7F3FF"/>
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SpaceLinkFrame" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#22D3EE"/>
                    <Setter Property="Background" Value="#2214182A"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#22D3EE" BlurRadius="16" ShadowDepth="0" Opacity="0.45"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="BorderBrush" Value="#22D3EE"/>
                    <Setter Property="Background" Value="#2214182A"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#22D3EE" BlurRadius="16" ShadowDepth="0" Opacity="0.45"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
</Page.Resources>

    <Grid x:Name="RootGrid"
          Focusable="True"
          KeyboardNavigation.IsTabStop="False">
        <Rectangle Fill="{StaticResource SpaceBackground}"/>
        
        <!-- Grid makeup -->
        <Canvas IsHitTestVisible="True" Opacity="0.9">
            <Ellipse Width="700" Height="700" Canvas.Left="-219" Canvas.Top="-340" Fill="#557C3AED">
                <Ellipse.Effect>
                    <BlurEffect Radius="100"/>
                </Ellipse.Effect>
            </Ellipse>

            <Ellipse Width="700" Height="700" Canvas.Left="190" Canvas.Top="325" Fill="#BA748D" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Ellipse.Effect>
                    <BlurEffect Radius="100"/>
                </Ellipse.Effect>
            </Ellipse>

            <Ellipse Width="700" Height="694" Canvas.Left="650" Canvas.Top="-267" Fill="#4E7198">
                <Ellipse.Effect>
                    <BlurEffect Radius="100"/>
                </Ellipse.Effect>
            </Ellipse>

            <Ellipse Width="700" Height="700" Canvas.Right="-160" Canvas.Top="325" Fill="#5522D3EE" Canvas.Left="890" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Ellipse.Effect>
                    <BlurEffect Radius="100"/>
                </Ellipse.Effect>
            </Ellipse>

            <Ellipse Width="700" Height="700" Canvas.Left="-536" Canvas.Bottom="-220" Fill="#44FB7185" HorizontalAlignment="Left" Canvas.Top="356" VerticalAlignment="Top">
                <Ellipse.Effect>
                    <BlurEffect Radius="100"/>
                </Ellipse.Effect>
            </Ellipse>
        </Canvas>

        <!-- Stars -->
        <Rectangle Fill="{StaticResource StarsBrush}" Opacity="0.35" IsHitTestVisible="False"/>
        
        <!-- Login card -->
        <Border Style="{StaticResource GlassCard}"
                Width="380"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                KeyboardNavigation.TabNavigation="Cycle"
                FocusManager.IsFocusScope="True"
                FocusManager.FocusedElement="{Binding ElementName=UsernameTextBox}">
            
            <StackPanel Width="330">
                <!-- Tillte -->
                <TextBlock Text="Tetris Game"
                           FontSize="40"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20" />
                <!-- Username -->
                <TextBlock Text="Username"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Opacity="0.9" />

                <TextBox x:Name="UsernameTextBox"
                         Style="{StaticResource SpaceTextBox}"
                         Margin="0,6,0,18"
                         TabIndex="0"/>
                
                <!-- Password -->
                <TextBlock Text="Password"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Opacity="0.9" />

                <PasswordBox Style="{StaticResource SpacePasswordBox}"
                             Margin="0,6,0,18"
                             TabIndex="1"/>
                
                <!-- Login -->
                <Button Style="{StaticResource SpaceButton}"
                        Content="Log in"
                        Height="36"
                        Click="LoginButton_Click" 
                        TabIndex="2"/>
                <!-- Continue as guest -->
                <Button Style="{StaticResource SpaceButton}"
                        Content="Continue as Guest"
                        Height="36"
                        Margin="0,10,0,0"
                        Click="ContinueAsGuestButton_Click"
                        TabIndex="3"/>
                
                <!-- Hyperlink -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,14,0,0">

                    <Border Style="{StaticResource SpaceLinkFrame}">
                        <TextBlock FontSize="13">
                            <Hyperlink Style="{StaticResource SpaceHyperlink}"
                                       Click="SignUpLink_Click"
                                       KeyboardNavigation.TabIndex="4">
                                       Register new account
                            </Hyperlink>
                        </TextBlock>
                    </Border>

                    <TextBlock Text="  |  "
                               FontSize="13"
                               Foreground="{StaticResource TextMuted}"
                               VerticalAlignment="Center"/>

                    <Border Style="{StaticResource SpaceLinkFrame}">
                        <TextBlock FontSize="13">
                            <Hyperlink Style="{StaticResource SpaceHyperlink}"
                                       Click="ForgotPasswordLink_Click"
                                       KeyboardNavigation.TabIndex="5">
                                       Forgot password?
                            </Hyperlink>
                        </TextBlock>
                    </Border>

                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>