<Page x:Class="TetrisApp.Views.Difficulty"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TetrisApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Difficulty">

    <Grid>
        <!-- NỀN -->
        <Rectangle Fill="{StaticResource SpaceBackground}"/>
        <!-- NEBULA / GLOW -->
        <Canvas IsHitTestVisible="True" Opacity="0.9">
            <Ellipse Width="700" Height="700" Canvas.Left="-219" Canvas.Top="-340" Fill="#557C3AED">
                <Ellipse.Effect>
                    <BlurEffect Radius="60"/>
                </Ellipse.Effect>
            </Ellipse>

            <Ellipse Width="700" Height="700" Canvas.Left="190" Canvas.Top="325" Fill="#BA748D" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Ellipse.Effect>
                    <BlurEffect Radius="60"/>
                </Ellipse.Effect>
            </Ellipse>

            <Ellipse Width="700" Height="694" Canvas.Left="650" Canvas.Top="-267" Fill="#4E7198">
                <Ellipse.Effect>
                    <BlurEffect Radius="60"/>
                </Ellipse.Effect>
            </Ellipse>

            <Ellipse Width="700" Height="700" Canvas.Right="-160" Canvas.Top="325" Fill="#5522D3EE" Canvas.Left="890" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Ellipse.Effect>
                    <BlurEffect Radius="70"/>
                </Ellipse.Effect>
            </Ellipse>

            <Ellipse Width="700" Height="700" Canvas.Left="-536" Canvas.Bottom="-220" Fill="#44FB7185" HorizontalAlignment="Left" Canvas.Top="356" VerticalAlignment="Top">
                <Ellipse.Effect>
                    <BlurEffect Radius="80"/>
                </Ellipse.Effect>
            </Ellipse>
        </Canvas>

        <StackPanel Width="420" VerticalAlignment="Center">
            <TextBlock Text="Difficulty" FontSize="44" FontWeight="Bold" FontStretch="Expanded" HorizontalAlignment="Center"/>

            <Button Style="{StaticResource SpaceButton}" Content="Easy" Height="50" Margin="0,20,0,0" Click="EasyButton_Click"/>
            <Button Style="{StaticResource SpaceButton}" Content="Medium" Height="50" Margin="0,10,0,0" Click="MediumButton_Click"/>
            <Button Style="{StaticResource SpaceButton}" Content="Hard" Height="50" Margin="0,10,0,0" Click="HardButton_Click"/>
        </StackPanel>

    </Grid>
</Page>
