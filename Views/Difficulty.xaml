<Page x:Class="TetrisApp.Views.Difficulty"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TetrisApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Difficulty"
      PreviewKeyDown="Difficulty_PreviewKeyDown">

    <Grid x:Name="RootGrid" Focusable="True">
        <!-- NỀN -->
        <Rectangle Fill="{StaticResource SpaceBackground}"/>

        <!-- NEBULA / GLOW -->
        <Canvas IsHitTestVisible="False" Opacity="0.9" Focusable="False">
            <Ellipse Width="700" Height="700" Canvas.Left="-219" Canvas.Top="-340" Fill="#557C3AED">
                <Ellipse.Effect>
                    <BlurEffect Radius="60"/>
                </Ellipse.Effect>
            </Ellipse>

            <Ellipse Width="700" Height="700" Canvas.Left="190" Canvas.Top="325" Fill="#BA748D">
                <Ellipse.Effect>
                    <BlurEffect Radius="60"/>
                </Ellipse.Effect>
            </Ellipse>

            <Ellipse Width="700" Height="694" Canvas.Left="650" Canvas.Top="-267" Fill="#4E7198">
                <Ellipse.Effect>
                    <BlurEffect Radius="60"/>
                </Ellipse.Effect>
            </Ellipse>

            <Ellipse Width="700" Height="700" Canvas.Left="890" Canvas.Top="325" Fill="#5522D3EE">
                <Ellipse.Effect>
                    <BlurEffect Radius="70"/>
                </Ellipse.Effect>
            </Ellipse>

            <Ellipse Width="700" Height="700" Canvas.Left="-536" Canvas.Top="356" Fill="#44FB7185">
                <Ellipse.Effect>
                    <BlurEffect Radius="80"/>
                </Ellipse.Effect>
            </Ellipse>
        </Canvas>

        <StackPanel x:Name="DifficultyPanel"
                    Width="420"
                    VerticalAlignment="Center"
                    KeyboardNavigation.TabNavigation="Cycle"
                    KeyboardNavigation.DirectionalNavigation="Cycle">

            <TextBlock Text="Difficulty"
                       FontSize="44"
                       FontWeight="Bold"
                       FontStretch="Expanded"
                       HorizontalAlignment="Center"/>

            <Button x:Name="EasyButton"
                    Style="{StaticResource SpaceButton}"
                    Content="Easy"
                    Height="50"
                    Margin="0,20,0,0"
                    Click="EasyButton_Click"
                    GotKeyboardFocus="Control_GotKeyboardFocus"
                    TabIndex="0"
                    IsTabStop="True"/>

            <Button x:Name="MediumButton"
                    Style="{StaticResource SpaceButton}"
                    Content="Medium"
                    Height="50"
                    Margin="0,10,0,0"
                    Click="MediumButton_Click"
                    GotKeyboardFocus="Control_GotKeyboardFocus"
                    TabIndex="1"
                    IsTabStop="True"/>

            <Button x:Name="HardButton"
                    Style="{StaticResource SpaceButton}"
                    Content="Hard"
                    Height="50"
                    Margin="0,10,0,0"
                    Click="HardButton_Click"
                    GotKeyboardFocus="Control_GotKeyboardFocus"
                    TabIndex="2"
                    IsTabStop="True"/>

            <Button x:Name="BackButton"
                    Style="{StaticResource SpaceButton}"
                    Content="Back to Menu"
                    Height="50"
                    Margin="0,40,0,0"
                    Click="BackButton_Click"
                    GotKeyboardFocus="Control_GotKeyboardFocus"
                    TabIndex="3"
                    IsTabStop="True" Width="282"/>

        </StackPanel>
    </Grid>
</Page> 